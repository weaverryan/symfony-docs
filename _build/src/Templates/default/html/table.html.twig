<table class="docutils" border="1">
    {% if tableHeader %}
        <thead valign="bottom">
        <tr class="row-odd">
            {% for value in tableHeader %}
                <th class="head">{{ value|raw }}</th>
            {% endfor %}
        </tr>
        </thead>
    {% endif %}

    <tbody valign="top">
    {% for tableRow in tableRows %}
        {% set index = tableHeader ? loop.index0 : loop.index %}
        <tr class="row-{{ index is odd ? 'odd' : 'even' }}">
            {% for value in tableRow %}
                <td>{{ value|raw }}</td>
            {% endfor %}
        </tr>
    {% endfor %}
    </tbody>
</table>
